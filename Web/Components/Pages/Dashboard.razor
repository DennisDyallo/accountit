@page "/dashboard"

<PageTitle>Dashboard - AccountIt</PageTitle>

<h1>Dashboard</h1>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                Financial Overview
            </div>
            <div class="card-body">
                <p>Total Income: 0 SEK</p>
                <p>Total Expenses: 0 SEK</p>
                <p>Net Profit: 0 SEK</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                Recent Transactions
            </div>
            <div class="card-body">
                <p>No recent transactions</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                Due Invoices
            </div>
            <div class="card-body">
                <p>No due invoices</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                VAT Status
            </div>
            <div class="card-body">
                <p>Next VAT report due: [Date]</p>
                <p>Estimated VAT payable: 0 SEK</p>
            </div>
        </div>
    </div>
</div>

